<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8" />
        <title>Alexandra Photography</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <link rel="stylesheet" href="{{ asset('/css/bootstrap.min-sketchy.css') }}" media="screen">
        <link rel="stylesheet" href="{{ asset('css/font-awesome/css/font-awesome.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('/css/main.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
        <header>

            {% set route = app.request.get('_route') %}

            <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
                <div class="container-fluid">
                    <a href="/" class="navbar-brand">
                        <img alt="Alexandra Daskalova" title="Alexandra Daskalova" id="navbar-logo" src="{{ asset('/img/alexandra_daskalova_logo_big.png') }}">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse big-font-size" id="navbarResponsive">
                        <ul class="navbar-nav">
                            <li {{ route == 'homepage' ? 'class="nav-item active"' }} class="nav-item">
                                <a class="nav-link" href="{{ path('homepage') }}">Home</a>
                            </li>
                            <li {{ route == 'gallery' ? 'class="nav-item active"' }} class="nav-item">
                                <a class="nav-link" href="{{ path('gallery') }}">Portraits</a>
                            </li>
                            <li {{ route == 'gallery' ? 'class="nav-item active"' }} class="nav-item">
                                <a class="nav-link" href="{{ path('gallery') }}">Weddings</a>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav ml-auto">
                            <li {{ route == 'contacts' ? 'class="nav-item active"' }} class="nav-item">
                                <a class="nav-link" href="{{ path('contacts') }}">Contacts</a>
                            </li>
                        </ul>

                    </div><!-- NAVBAR-COLAPSE -->
                </div><!-- CONTAINER -->
            </div><!-- NAVBAR -->
        </header>

        <div class="content">
            {% block content %}{% endblock %}
        </div>

        <footer>
            <div class="text-center">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="pull-left admin-link" href="{{ path('admin') }}">Admin</a>
                {% else %}
                    <a class="pull-left admin-link" href="{{ path('login') }}">Admin</a>
                {% endif %}
                <span>Copyright 2018 Alexandra Daskalova - Varna</span>
            </div>
        </footer>

    </body>

    <script src="{{ asset('/js/jquery.min.js') }}"></script>
    <script src="{{ asset('/js/popper.min.js') }}"></script>
    <script src="{{ asset('/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('/js/main.js') }}"></script>
    {% block javascripts %}{% endblock %}
</html>
