{% extends 'base.html.twig' %}

{% block content %}

    <div class="container mt-3">

        <div class="row">

            <div class="col-12 col-lg-4">

                <div class="row">
                    <div class="col text-center">
                        <img src="{{ asset('img/alexandra_index_image.jpg') }}" class="index-image"/>
                    </div>
                </div>

                <div class="row contacts-font-size">

                    <div class="col-md-6 col-lg-12 mt-4 mt-lg-3 text-center">
                        <span class="fa fa-envelope icon"></span>
                        <span class="fa fa-arrow-right"></span>
                        <span class="details">alexandra@gmail.com</span>
                    </div>

                    <div class="col-md-4 col-lg-12 mt-2 mt-lg-3 text-center">
                        <a href="https://www.facebook.com/aleksandrad.52" target="_blank">
                            <img class="facebook-image" src="{{ asset('img/facebook.png') }}"/>
                        </a>
                    </div>
                </div>

            </div>


            <div class="col-12 col-lg-8 mt-lg-3">

                <hr/>
                <h4 class="text-center">Send Message</h4>
                    <hr/>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 col-sm mt-2 mt-sm-0">
                                <label>Name:</label>
                                <input type="text" placeholder="Name" id="name" class="form-control"/>
                            </div>
                            <div class="col-12 col-sm mt-2 mt-sm-0">
                                <label>Email:</label>
                                <input type="email" placeholder="Email" id="email" class="form-control"/>
                            </div>
                            <div class="col-12 col-sm mt-2 mt-sm-0">
                                <label>Phone:</label>
                                <input type="text" placeholder="Phone (Not required)" id="phone" class="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col mt-2 mt-sm-0">
                                <input type="text" placeholder="Title (Not required)" id="title" class="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <textarea placeholder="Message" id="message" class="form-control textarea"></textarea>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <button class="btn btn-outline-success btn-block">Send</button>
                            </div>
                        </div>
                    </div>

            </div>

        </div>
    </div>

{% endblock %}
