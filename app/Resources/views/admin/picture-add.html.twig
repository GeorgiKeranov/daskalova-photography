{% extends 'base.html.twig' %}

{% block content %}

    <div class="container mt-4">
        <form method="post" enctype="multipart/form-data" action="{{ path('admin_pictures_add') }}">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="text-center">Add your photo here</h4>
                    <span id="remove-portfolio-pic" class="fa fa-remove d-none"></span>
                    <div class="text-center">
                        <img id="picture" class="img-thumbnail" src="{{ asset('img/no-picture-available.png') }}">
                    </div>
                    <input id="input-picture" name="picture" type="file" class="form-control mt-3"/>
                </div>

                <div class="col-md-6">
                    <div class="row mt-3">
                        <div class="col">
                            <label for="choose_category">Choose category: </label>
                            <select name="category_link" id="choose_category" class="form-control">
                                {% for category in categories %}
                                <option value="{{ category.link }}">{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <label for="description">Description:</label>
                            <textarea class="form-control" id="description" name="description" placeholder="Description" rows="4"></textarea>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                        {% if error is defined %}
                            <div class="alert-danger text-center">
                                {{ error }}
                            </div>
                        {% endif %}
                            <button class="btn btn-success btn-block mt-3">Add the picture</button>
                        </div>
                    </div>

                </div>
            </div>



        </form>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/admin/picture.js') }}"></script>
{% endblock %}