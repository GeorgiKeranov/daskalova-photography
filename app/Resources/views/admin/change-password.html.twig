{% extends 'base.html.twig' %}

{% block content %}

    <div class="container mt-3 text-center">

        <h1>Change password</h1>
        <div class="alert-danger">
            {% if error is defined %}
                {{ error }}
            {% endif %}
        </div>
        <form method="POST">
            <div class="form-group mt-4">
                <label class="normal-font-size" for="new-password-1">New password:</label>
                <input id="new-password-1" name="new-password-1" type="password"/>
            </div>
            <div class="form-group mt-2">
                <label class="normal-font-size" for="new-password-2">Confirm new password:</label>
                <input id="new-password-2" name="new-password-2" type="password"/>
            </div>
            <div class="form-group mt-2">
                <label class="normal-font-size" for="current-password">Current password:</label>
                <input id="current-password" name="current-password" type="password"/>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-success">Change It!</button>
            </div>
        </form>
    </div>

{% endblock %}